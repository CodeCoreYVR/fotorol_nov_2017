<%- include('../partials/header') %>

<form
  action="/posts"
  method="POST"
  enctype="multipart/form-data"
>
  <div class="form-group">
    <input
      class="form-control"
      type="file"
      name="picture"
      value=""
    >
  </div>
  <!--
  Example of urlencoded data:

  username=steve&content=this+is+my+content
  -->
  <div class="form-group">
    <input
      class="form-control"
      type="text"
      name="username"
      value=""
      placeholder="What's your username?"
    >
  </div>
  <div class="form-group">
    <textarea
      class="form-control"
      rows='5'
      name='content'
      placeholder="What's on your mind?"
    ></textarea>
  </div>
  <input
    class="btn btn-outline-primary"
    type='submit'
    value='Submit'
  />
</form>

<%- include('../partials/footer') %>
