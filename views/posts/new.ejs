<%- include('../partials/header') %>

<form
  action="/posts"
  method='POST'
>
  <div class="form-group">
    <input
      class="form-control"
      type="text"
      name="username"
      value=""
      placeholder="What's your username?"
    >
  </div>
  <div class="form-group">
    <textarea
      class="form-control"
      rows='5'
      name='content'
      placeholder="What's on your mind?"
    ></textarea>
  </div>
  <input
    class="btn btn-outline-primary"
    type='submit'
    value='Submit'
  />
</form>

